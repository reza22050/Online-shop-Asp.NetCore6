@page
@model Admin.EndPoint.Pages.CatalogType.EditModel
@{
}
    <div class="page-body">
                <div class="title-header">
                    <h5>Add Catalog</h5>
                </div>

                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="card">
                                        <div class="card-body">
                                            <div class="card-header-2">
                                                <h5>Add new Catalog</h5>
                                            </div>

                                            @foreach (var item in Model.Message)
                                            {
                                                <div class="alert alert-info">
                                                    <p class="mb-0">@item</p>
                                                </div>
                                            }

                                            <form class="theme-form theme-form-2 mega-form" asp-page="edit" method="post">
                                              <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                                <div class="row">
                                                    <div class="mb-4 row align-items-center">
                                                        <label class="form-label-title col-sm-2 mb-0" asp-for="CatalogType.Type"></label>
                                                        <div class="col-sm-10">
                                                            <input class="form-control" type="text" placeholder="Catalog Type" asp-for="CatalogType.Type">
                                                        </div>
                                                        <span class="text-danger" asp-validation-for="CatalogType.Type"></span>
                                                    </div>
                                                    <input type="hidden" asp-for="CatalogType.Id" />
                                                <div class="mb-4 row align-items-center">
                                                    <div class="card-footer text-end border-0 pt-0">
                                                            <button type="submit" class="btn btn-primary me-3">Submit</button>
                                                            <a asp-page="Index" class="btn btn-outline-primary">Cancel</a>
                                                    </div>
                                                </div>  

                                                </div>
                                            </form>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
              
    </div>


    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    }