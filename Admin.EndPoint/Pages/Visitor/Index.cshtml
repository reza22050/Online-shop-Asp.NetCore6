<script>
    var DisplayDay = @Html.Raw(Json.Serialize(Model.resultTodayReportDto.GeneralStats.VisitPerDay.Display));
    var ValueDay = @Html.Raw(Json.Serialize(Model.resultTodayReportDto.GeneralStats.VisitPerDay.Value));

    var barData = [];
    for (let i = 0; i < DisplayDay.length; i++) {
        var obj = {x: DisplayDay[i],y: ValueDay[i]};
        barData.push(obj);
      }


    var options = {
    series: [{
        name: 'Actual',

        data: barData
        
    }],

    chart: {
        height: 320,
        type: 'bar'
    },

    plotOptions: {
        bar: {
            columnWidth: '40%'
        }
    },

    colors: ['#e22454'],
    dataLabels: {
        enabled: false
    },

    legend: {
        show: false,
    }
};
    var chart = new ApexCharts(document.querySelector("#report-chart_monthly"), options);
chart.render();
</script>

