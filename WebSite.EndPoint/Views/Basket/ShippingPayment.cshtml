@using WebSite.EndPoint.Models.ViewModels.Basket
@model ShippingPaymentViewModel
@{
    ViewData["Title"] = "ShippingPayment";
    Layout = "~/Views/Shared/_Layout_Product.cshtml";
}



<!-- Breadcrumb section start -->
